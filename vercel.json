{
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "get.mcp-hangar.io"
        }
      ],
      "destination": "https://mcp-hangar.io/install.sh",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/((?!install\\.sh$).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/install.sh",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=300"
        }
      ]
    }
  ]
}